<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RecordActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/row_header"
        android:text="記録(練習)"
        />
    <LinearLayout
        android:id="@+id/row_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        >
        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            android:textSize="18sp"
            android:gravity="right"
            android:text="avg."
            />
        <TextView
            android:id="@+id/txt_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/txt_total_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            android:textSize="18sp"
            android:text="最新N回合計"
            />
        <TextView
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#f0f0f0"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/row_header"
        app:layout_constraintBottom_toTopOf="@+id/row_score_input"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="履歴"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/InputView"
                android:text="No"
                />
            <TextView
                style="@style/InputView"
                android:text="1"
                />
            <TextView
                style="@style/InputView"
                android:text="2"
                />
            <TextView
                style="@style/InputView"
                android:text="3"
                />
            <TextView
                style="@style/InputView"
                android:text="4"
                />
            <TextView
                style="@style/InputView"
                android:text="5"
                />
            <TextView
                style="@style/InputView"
                android:text="6"
                />
            <TextView
                style="@style/InputView"
                android:text="計"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_score_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/row_history"
        app:layout_constraintBottom_toTopOf="@+id/panel_key"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/InputView"
                android:text="1"
                />
            <TextView
                style="@style/InputView"
                android:text="2"
                />
            <TextView
                style="@style/InputView"
                android:text="3"
                />
            <TextView
                style="@style/InputView"
                android:text="4"
                />
            <TextView
                style="@style/InputView"
                android:text="5"
                />
            <TextView
                style="@style/InputView"
                android:text="6"
                />
            <TextView
                style="@style/InputView"
                android:text="計"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/txt_score_1"
                style="@style/InputView"
                android:textSize="20sp"
                android:inputType="none"
                />
            <EditText
                android:id="@+id/txt_score_2"
                style="@style/InputView"
                android:textSize="20sp"
                android:inputType="none"
                />
            <EditText
                android:id="@+id/txt_score_3"
                style="@style/InputView"
                android:textSize="20sp"
                android:inputType="none"
                />
            <EditText
                android:id="@+id/txt_score_4"
                style="@style/InputView"
                android:textSize="20sp"
                android:inputType="none"
                />
            <EditText
                android:id="@+id/txt_score_5"
                style="@style/InputView"
                android:textSize="20sp"
                android:inputType="none"
                />
            <EditText
                android:id="@+id/txt_score_6"
                style="@style/InputView"
                android:textSize="20sp"
                android:inputType="none"
                />
            <TextView
                android:id="@+id/txt_sub_total"
                style="@style/InputView"
                android:textSize="20sp"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:paddingHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/row_score_input"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_score_x"
                    style="@style/KeyButton"
                    android:text="X"
                    />
                <Button
                    android:id="@+id/btn_score_10"
                    style="@style/KeyButton"
                    android:text="10"
                    />
                <Button
                    android:id="@+id/btn_score_9"
                    style="@style/KeyButton"
                    android:text="9"
                    />
                <Button
                    android:id="@+id/btn_score_8"
                    style="@style/KeyButton"
                    android:text="8"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_score_7"
                    style="@style/KeyButton"
                    android:text="7"
                    />
                <Button
                    android:id="@+id/btn_score_6"
                    style="@style/KeyButton"
                    android:text="6"
                    />
                <Button
                    android:id="@+id/btn_score_5"
                    style="@style/KeyButton"
                    android:text="5"
                    />
                <Button
                    android:id="@+id/btn_score_4"
                    style="@style/KeyButton"
                    android:text="4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_score_3"
                    style="@style/KeyButton"
                    android:text="3"
                    />
                <Button
                    android:id="@+id/btn_score_2"
                    style="@style/KeyButton"
                    android:text="2"
                    />
                <Button
                    android:id="@+id/btn_score_1"
                    style="@style/KeyButton"
                    android:text="1"
                    />
                <Button
                    android:id="@+id/btn_score_m"
                    style="@style/KeyButton"
                    android:text="M"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_done"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="決定"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>